<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GetRewardActivity" >

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onHomeBtnClicker"
        android:src="@drawable/home" />

    <ImageView
        android:id="@+id/trade_main_list_item_left1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imageButton1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/q_image" />

    <TextView
        android:id="@+id/get_reweard_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/trade_main_list_item_left1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="20dp"
        android:text="凭此二维码可以兑换电影票一张"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
