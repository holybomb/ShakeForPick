<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/trade_main_list_item_left"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/trade_main_list_item_right"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/trade_main_list_item_left1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/trade_img" />

        <ImageView
            android:id="@+id/trade_main_list_item_left2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/heart"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trade_main_list_item_right"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/trade_main_list_item_left"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/trade_main_list_item_right1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/trade_img" />

        <ImageView
            android:id="@+id/trade_main_list_item_right2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/heart"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>