<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/my_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="xxx旗舰店"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/my_item_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/my_item_title"
        android:layout_alignBottom="@+id/my_item_title"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/my_item_title"
        android:text="1F"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/my_item_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/my_item_title"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/award_img1" />

    <TextView
        android:id="@+id/my_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/my_item_icon"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/my_item_icon"
        android:layout_toRightOf="@+id/my_item_icon"
        android:text="描述。。。"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="17sp" />

</RelativeLayout>